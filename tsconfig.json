{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "emitDeclarationOnly": true,
    "types": ["vitest/globals"],
    "outDir": "dist/types"
  },
  "include": ["src/**/*.js", "index.js"],
  "exclude": ["index.d.ts", "src/**/*.d.ts", "src/**/*.test.js"]
}
