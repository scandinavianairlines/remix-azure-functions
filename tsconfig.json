{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "outDir": "types/",
    "sourceMap": false,
    "types": ["vitest/globals"]
  },
  "include": ["./src/**/*.js", "index.js"],
  "exclude": ["index.d.ts", "src/**/*.d.ts", "src/**/*.test.js", "examples/"]
}
